      "ingress": null,
      "k8s_service_config": null,
      "autoscale": false,
      "replicas": 1,
      "storage": 1000,
      "toleration": "apollo-core-service",
      "resources": {
        "requests": {
          "cpu": 2,
          "memory": 4
        },
        "limits": {
          "cpu": 7,
          "memory": 14
        }
      },
      "external_secret": {
        "gcsm_key": "apollo-sepolia-integration-0"
      },
      "anti_affinity": true,
      "ports": {
        "Batcher": 55000,
