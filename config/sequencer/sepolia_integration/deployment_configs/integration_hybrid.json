{
  "chain_id": "SN_INTEGRATION_SEPOLIA",
  "image": "ghcr.io/starkware-libs/sequencer/sequencer:dev",
  "application_config_subdir": "config/sequencer/sepolia_integration/app_configs/hybrid/",
  "services": [
    {
      "name": "Core",
      "controller": "StatefulSet",
      "config_path": "core.json",
      "ingress": null,
      "autoscale": false,
      "replicas": 1,
      "storage": 500,
      "toleration": "sequencer",
      "resources": {
        "requests": {
          "cpu": 2,
          "memory": 4
        },
        "limits": {
          "cpu": 4,
          "memory": 8
        }
      },
      "external_secret": {
        "gcsm_key": "sequencer-integration-secrets"
      }
    },
    {
      "name": "HttpServer",
      "controller": "Deployment",
      "config_path": "http_server.json",
      "ingress": {
        "domain": "sw-dev.io",
        "internal": false,
        "rules": [
          {
            "path": "/gateway",
            "port": 8080
          },
          {
            "path": "/feeder_gateway",
            "port": 8085
          }
        ],
        "alternative_names": [
          "starknet-upgrade-testing-sepolia.gateway-proxy.sw-dev.io"
        ]
      },
      "autoscale": false,
      "replicas": 1,
      "storage": null,
      "toleration": null,
      "resources": {
        "requests": {
          "cpu": 1,
          "memory": 2
        },
        "limits": {
          "cpu": 4,
          "memory": 8
        }
      },
      "external_secret": {
        "gcsm_key": "sequencer-integration-secrets"
      }
    },
    {
      "name": "Gateway",
      "controller": "Deployment",
      "config_path": "gateway.json",
      "ingress": null,
      "autoscale": true,
      "replicas": 2,
      "storage": null,
      "toleration": null,
      "resources": {
        "requests": {
          "cpu": 1,
          "memory": 2
        },
        "limits": {
          "cpu": 2,
          "memory": 4
        }
      },
      "external_secret": {
        "gcsm_key": "sequencer-integration-secrets"
      }
    },
    {
      "name": "Mempool",
      "controller": "Deployment",
      "config_path": "mempool.json",
      "ingress": null,
      "autoscale": false,
      "replicas": 1,
      "storage": null,
      "toleration": null,
      "resources": {
        "requests": {
          "cpu": 1,
          "memory": 2
        },
        "limits": {
          "cpu": 2,
          "memory": 4
        }
      },
      "external_secret": {
        "gcsm_key": "sequencer-integration-secrets"
      }
    },
    {
      "name": "SierraCompiler",
      "controller": "Deployment",
      "config_path": "sierra_compiler.json",
      "ingress": null,
      "autoscale": true,
      "replicas": 2,
      "storage": null,
      "toleration": null,
      "resources": {
        "requests": {
          "cpu": 1,
          "memory": 2
        },
        "limits": {
          "cpu": 2,
          "memory": 4
        }
      },
      "external_secret": {
        "gcsm_key": "sequencer-integration-secrets"
      }
    }
  ]
}
